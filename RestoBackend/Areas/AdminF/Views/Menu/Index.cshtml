@model IEnumerable<Menu>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminF/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
 <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Menu Table</h4>
                    <a asp-controller="Menu" asp-action="Create" class="btn btn-success"> Create</a>
                 
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Count</th>
                          <th>Image</th>
                          <th>SubTitle</th>
                          <th>Title</th>
                          <th>Price</th>
                          <th>Settings</th>
                        </tr>
                      </thead>
                      <tbody>
                       @foreach (var item in Model)
                            {
                                count++;
                                 <tr>
                          <td>@count</td>
                          <td><img src="~/assets/img/@item.Image" /></td>
                          <td>@item.SubTitle</td>
                          <td>@item.Title</td>
                          <td>@item.Price</td>
                          <td>
                              <a asp-controller="Menu" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> Delete</a>
                                 <a asp-controller="Menu" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary"> Update</a>
                                    <a asp-controller="Menu" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info"> Detail</a>
                          </td>
                        </tr>

                      }
                        
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
